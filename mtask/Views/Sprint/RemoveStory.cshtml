@using mtask.Models.InputModel
@model SprintRemoveStoryInputModel
@{
    ViewBag.Title = "ストーリー除外";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-8">
        <section id="LogonForm">
            @using (Html.BeginForm("RemoveStory", "Sprint", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>下記のストーリーをスプリントから除外します。</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.SprintId, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.SprintId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SprintId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Sprint.Description, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.Sprint.Description, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Sprint.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.StoryId, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.StoryId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.StoryId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.StoryDescription, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.StoryDescription, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.StoryDescription, "", new { @class = "text-danger" })
                    </div>
                </div>
                @Html.HiddenFor(model => model.SprintId)
                @Html.HiddenFor(model => model.StoryId)
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="除外" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}